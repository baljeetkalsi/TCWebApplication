
@model TCWebApp.Models.UserData

@{
    ViewBag.Title = "Login";
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">

                <h2> TC Web App Test Project</h2>
                <br />
                <h2 class="mb-3 font-weight-normal">Please Sign in</h2>

                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <br />
                    <label">User Name</label>
                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", @required = "", placeholder = "UserName" })
                    <br />
                    <label>Password</label>
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control", @required = "", placeholder = "Password" })
                    <br />
                    <button class="btn btn-primary " type="submit">Sign in</button>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</body>
</html>
